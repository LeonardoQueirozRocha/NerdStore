@model IEnumerable<NerdStore.Core.Data.EventSourcing.StoredEvent>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @{
        <table class="table table-sm table-bordered table-hover col-md-12">
            <thead class="table-dark">
                <tr>
                    <td>Id</td>
                    <td>Nome</td>
                    <td>Data</td>
                    <td>JSON</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.Id</td>
                        <td>@evt.Type</td>
                        <td>@evt.OccurrenceDate</td>
                        <td><code>@evt.Data</code></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
